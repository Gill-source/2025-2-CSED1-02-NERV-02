{
  "manifest_version": 3,
  "name": "GuardFilter",
  "version": "1.0.0",
  "description": "Real-time analysis and blocking of chat messages.",
  "icons": {
  },
  
  "background": {
    "service_worker": "background.js", 
    "type": "module" 
  },

  "action": {
    "default_title": "SafeGuard Settings",
    "default_popup": "popup.html" 
  },

  "permissions": [
    "storage", 
    "tabs",
    "activeTab",
    "scripting"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"] 
    }
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:8000/*"
  ]
}